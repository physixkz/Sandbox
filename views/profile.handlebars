<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Dish:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Dish Name:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-funding">Cooking Time (minutes):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div>
      <div class="form-group">
        <label for="project-desc">Ingredients:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="project-inst">Instructions:</label>
        <textarea class="form-input" id="project-inst" name="project-inst"></textarea>
      </div>
      <div class="form-group">
        <label for="project-inst">Picture Link:</label>
        <textarea class="form-input" id="project-pict" name="project-pict"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Recipes:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.dish}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-edit" data-id="{{project.id}}">EDIT</button>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-delete" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>

    {{!-- Edit form for each project --}}
    <div class="row mb-2 edit-form" style="display: none;">
      <div class="col-md-12">
        <form class="form edit-project-form">
          <div class="form-group">
            <label for="edit-project-name">Dish Name:</label>
            <input class="form-input" type="text" id="edit-project-name" name="edit-project-name" value="{{project.dish}}" />
          </div>
          <div class="form-group">
            <label for="edit-project-funding">Cooking Time (minutes):</label>
            <input class="form-input" type="number" id="edit-project-funding" name="edit-project-funding" value="{{project.cooking_time}}" />
          </div>
          <div class="form-group">
            <label for="edit-project-desc">Ingredients:</label>
            <textarea class="form-input" id="edit-project-desc" name="edit-project-desc">{{project.ingredients}}</textarea>
          </div>
          <div class="form-group">
            <label for="edit-project-inst">Instructions:</label>
            <textarea class="form-input" id="edit-project-inst" name="edit-project-inst">{{project.instructions}}</textarea>
          </div>
          <div class="form-group">
            <label for="edit-project-pict">Picture Link:</label>
            <textarea class="form-input" id="edit-project-pict" name="edit-project-pict">{{project.picture_link}}</textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>